<!-- ОКНО ОТКЛЮЧЕНИЯ СОПЕРНИКА -->
<!-- ========================================== -->
<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="BattleShipGame2.Views.OpponentDisconnectWindow"
        Title="Соединение потеряно"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        IsVisible="False"
        Classes="DialogWindow">
    
    <StackPanel Classes="DialogPanel">
        <TextBlock Name="OpponentDisconnectMessage"
                   TextWrapping="Wrap"
                   Classes="DialogText"/>
        
        <Button Name="OpponentDisconnectOkButton"
                Content="OK"
                HorizontalAlignment="Center"
                Classes="DialogButton"/>
    </StackPanel>
</Window>