<!-- ОКНО ПОДКЛЮЧЕНИЯ К СЕТИ -->
<!-- ========================================== -->
<Window 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="BattleShipGame2.Views.NetworkConnectWindow"
        Title="Подключение к серверу"
        Width="400"
        Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        IsVisible="False"
        Classes="DialogWindow">
    
    <StackPanel Classes="NetworkConnectPanel">
        <TextBlock Text="Введите данные сервера" Classes="Subtitle"/>
        
        <TextBox Name="PlayerNameInput"
                 Watermark="Ваш ник"
                 Classes="NetworkInput"/>
        
        <TextBox Name="ServerHostInput"
                 Watermark="IP-адрес сервера"
                 Text="127.0.0.1"
                 Classes="NetworkInput"/>
        
        <TextBox Name="ServerPortInput"
                 Watermark="Порт (8889)"
                 Text="8889"
                 Classes="NetworkInput"/>
        
        <Button Name="ConnectButton"
                Content="Подключиться"
                Classes="SubButton"/>
        
        <Button Name="NetworkBackButton"
                Content="Назад"
                Classes="SubButton"/>
        
        <TextBlock Name="ConnectionErrorTextBlock"
                   Classes="ConnectionError"
                   IsVisible="False"/>
    </StackPanel>
</Window>