<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BattleShipGame2.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BattleShipGame2.Views.MenuView"
             x:DataType="vm:MenuViewModel">

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="20">
        
        <TextBlock Text="⚓️ МОРСКОЙ БОЙ ⚓️"
                   Classes="Title"/>
        
        <Button Content="🤖 Играть против компьютера"
                Classes="MenuButton"
                Command="{Binding PlayVsComputerCommand}"/>
        
        <Button Content="👥 Играть вдвоём"
                Classes="MenuButton"
                Command="{Binding PlayVsPlayerCommand}"/>
        
        <Button Content="🌐 Играть онлайн"
                Classes="MenuButton"
                Command="{Binding PlayOnlineCommand}"/>
        
        <TextBlock Text="Game created by F.A.S.T DEVELOPMENT"
                   Classes="Subtitle"/>
    </StackPanel>
    
</UserControl>