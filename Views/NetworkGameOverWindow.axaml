<!-- ОКНО ОКОНЧАНИЯ СЕТЕВОЙ ИГРЫ -->
<!-- ========================================== -->
<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="BattleShipGame2.Views.NetworkGameOverWindow"
        Title="Сетевая игра окончена"
        Width="450"
        Height="250"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        IsVisible="False"
        Classes="DialogWindow">
    
    <StackPanel Classes="DialogPanel">
        <TextBlock Name="NetworkGameOverResultText"
                   Classes="GameOverTitle"/>
        
        <TextBlock Name="NetworkGameOverWinnerText"
                   Classes="WinnerText"/>
        
        <StackPanel Classes="DialogButtons">
            <Button Name="NetworkGameOverNewGameButton"
                    Content="🔄 Новая онлайн игра"
                    Classes="DialogButton"/>
            
            <Button Name="NetworkGameOverMenuButton"
                    Content="🏠 В главное меню"
                    Classes="DialogButton"/>
        </StackPanel>
    </StackPanel>
</Window>