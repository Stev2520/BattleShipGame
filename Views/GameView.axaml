<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BattleShipGame2.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="BattleShipGame2.Views.GameView"
             x:DataType="vm:GameViewModel">

    <Design.DataContext>
        <vm:GameViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20">
        
        <!-- Статус игры -->
        <Border Classes="Panel"
                Margin="0,0,0,20">
            <TextBlock Text="{Binding StatusText}"
                       Classes="Status"/>
        </Border>
        
        <!-- Игровые доски -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="50">
            
            <!-- Ваше поле -->
            <StackPanel Spacing="10">
                <Border Classes="BoardHeader Player">
                    <TextBlock Text="🛡️ ВАШЕ ПОЛЕ"
                               Classes="BoardLabel"/>
                </Border>
                
                <Canvas x:Name="OwnCanvas"
                        Classes="GameBoard"
                        Background="#1E3250"
                        Width="420"
                        Height="420"/>
                
                <TextBlock Text="{Binding PlayerStats}"
                           Classes="Stats"/>
            </StackPanel>
            
            <!-- Поле противника -->
            <StackPanel Spacing="10">
                <Border Classes="BoardHeader Enemy">
                    <TextBlock Text="🎯 ПОЛЕ ПРОТИВНИКА"
                               Classes="BoardLabel"/>
                </Border>
                
                <Canvas x:Name="EnemyCanvas"
                        Classes="GameBoard"/>
                
                <TextBlock Text="{Binding OpponentStats}"
                           Classes="Stats"/>
            </StackPanel>
            
        </StackPanel>
        
        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Margin="0,20,0,0">
            
            <Button Content="🔄 НОВАЯ ИГРА"
                    Classes="GameButton ResetButton"
                    Command="{Binding NewGameCommand}"/>
            
            <Button Content="🏠 В МЕНЮ"
                    Classes="GameButton MenuExitButton"
                    Command="{Binding BackToMenuCommand}"/>
        </StackPanel>
    </StackPanel>
    
</UserControl>