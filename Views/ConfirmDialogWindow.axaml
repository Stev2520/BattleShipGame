<!-- ОКНО ПОДТВЕРЖДЕНИЯ -->
<!-- ========================================== -->
<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="BattleShipGame2.Views.ConfirmDialogWindow"
    Title="Подтверждение"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterOwner"
    CanResize="False"
    IsVisible="False"
    Classes="DialogWindow">
    
    <StackPanel Classes="DialogPanel">
        <TextBlock Name="ConfirmDialogMessage"
                   TextWrapping="Wrap"
                   Classes="DialogText"/>
        
        <StackPanel Classes="DialogButtons">
            <Button Name="ConfirmYesButton"
                    Content="Да"
                    Classes="DialogButton"/>
            
            <Button Name="ConfirmNoButton"
                    Content="Нет"
                    Classes="DialogButton"/>
        </StackPanel>
    </StackPanel>
</Window>