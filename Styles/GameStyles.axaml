    <Style Selector="TextBox.NetworkInput:focus">
        <Setter Property="BorderBrush" Value="#5A7AAA"/>
    </Style>
    
    <Style Selector="Button.NetworkConnectButton">
        <Setter Property="Background" Value="#3C5A8C"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="20,10"/>
